# 简化版实时市场数据保存系统配置文件
# 专注于实时数据获取和基础存储，避免复杂的数据库依赖

# ==================== 数据源配置 ====================
# 市场代码：'hs'=沪深市场, 'sh'=上海市场, 'sz'=深圳市场
MARKET_SYMBOL=hs

# 数据源超时时间（秒）
DATA_SOURCE_TIMEOUT=30

# ==================== Redis配置 ====================
# Redis服务器配置（如果Redis不可用，系统会自动跳过）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis缓存过期时间（秒）
CACHE_EXPIRE_SECONDS=300

# ==================== CSV备份配置 ====================
# 是否保存到CSV文件（推荐开启，作为备份）
SAVE_TO_CSV=true

# CSV备份目录
CSV_BACKUP_DIR=./backup

# ==================== 数据处理配置 ====================
# 是否添加时间戳列
ADD_TIMESTAMP_COLUMN=true

# 是否启用数据验证
ENABLE_DATA_VALIDATION=true

# 最大重试次数
MAX_RETRY_ATTEMPTS=3

# ==================== 日志配置 ====================
# 日志级别：DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ==================== 使用说明 ====================
# 1. 基础运行:
#    python db_manager/save_realtime_market_data_simple.py
#
# 2. 强制更新:
#    python db_manager/save_realtime_market_data_simple.py --force-update
#
# 3. 指定市场:
#    python db_manager/save_realtime_market_data_simple.py --market sh
#
# 4. 使用配置文件:
#    python db_manager/save_realtime_market_data_simple.py --config simple_config.env
#
# 注意事项:
# - 如果Redis不可用，系统会自动跳过Redis存储，只使用CSV备份
# - 确保已安装efinance库: pip install efinance
# - CSV文件会保存在backup目录下，可用于数据恢复
