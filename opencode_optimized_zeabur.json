{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "autoupdate": "notify",
  "tui": {
    "scroll_acceleration": {
      "enabled": true
    },
    "diff_style": "auto"
  },
  "server": {
    "port": 11000,
    "mdns": true
  },
  "tools": {
    "write": true,
    "bash": true
  },
  "permission": {
    "edit": "ask",
    "bash": "ask"
  },
  "compaction": {
    "auto": true,
    "prune": true
  },
  "watcher": {
    "ignore": [
      "node_modules/**",
      ".git/**",
      "dist/**",
      "build/**",
      ".ruff_cache/**",
      ".pytest_cache/**",
      "__pycache__/**"
    ]
  },
  "plugin": [
    "oh-my-opencode@3.2.3",
    "@tarquinen/opencode-dcp@latest"
  ],
  "instructions": [
    ".cursor/rules/*.md",
    "CLAUDE.md"
  ],
  "enabled_providers": [
    "cliproxyapi-claude",
    "cliproxyapi-gemini",
    "cliproxyapi-oai",
    "cliproxyapi"
