{
  "dashboard": {
    "title": "MyStocks监控面板",
    "tags": ["mystocks", "monitoring", "performance"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "今日操作总数",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "datasource": "MyStocks-Monitoring",
            "rawSql": "SELECT COUNT(*) as total_operations FROM operation_logs WHERE created_at >= NOW() - INTERVAL '24 hours'",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 1000, "color": "yellow"},
                {"value": 10000, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "慢查询数量",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "datasource": "MyStocks-Monitoring",
            "rawSql": "SELECT COUNT(*) FROM performance_metrics WHERE is_slow_query = TRUE AND created_at >= NOW() - INTERVAL '24 hours'",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 5, "color": "yellow"},
                {"value": 20, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "未解决告警",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "datasource": "MyStocks-Monitoring",
            "rawSql": "SELECT COUNT(*) FROM alert_records WHERE alert_status IN ('OPEN', 'ACKNOWLEDGED')",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 5, "color": "yellow"},
                {"value": 15, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "平均查询时间",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "datasource": "MyStocks-Monitoring",
            "rawSql": "SELECT ROUND(AVG(metric_value)::NUMERIC, 2) as avg_time FROM performance_metrics WHERE metric_type = 'QUERY_TIME' AND created_at >= NOW() - INTERVAL '24 hours'",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 500, "color": "yellow"},
                {"value": 2000, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "查询时间趋势 (5分钟聚合)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "datasource": "MyStocks-Monitoring",
            "rawSql": "SELECT DATE_TRUNC('minute', created_at) + INTERVAL '5 minute' * FLOOR(EXTRACT(EPOCH FROM created_at - DATE_TRUNC('minute', created_at))/300) AS time, AVG(metric_value) as \"平均\", MAX(metric_value) as \"最大\", MIN(metric_value) as \"最小\" FROM performance_metrics WHERE metric_type = 'QUERY_TIME' AND created_at >= NOW() - INTERVAL '24 hours' GROUP BY time ORDER BY time",
            "format": "time_series"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "平均"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "blue"}}]
            },
            {
              "matcher": {"id": "byName", "options": "最大"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}]
            },
            {
              "matcher": {"id": "byName", "options": "最小"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "green"}}]
            }
          ]
        }
      },
      {
        "id": 6,
        "title": "数据库性能对比",
        "type": "barchart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "datasource": "MyStocks-Monitoring",
            "rawSql": "SELECT database_type, COUNT(*) as \"查询数\", ROUND(AVG(metric_value)::NUMERIC, 2) as \"平均时间(ms)\", MAX(metric_value) as \"最大时间(ms)\" FROM performance_metrics WHERE metric_type = 'QUERY_TIME' AND created_at >= NOW() - INTERVAL '24 hours' GROUP BY database_type ORDER BY AVG(metric_value) DESC",
            "format": "table"
          }
        ]
      },
      {
        "id": 7,
        "title": "慢查询Top 10",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 12},
        "targets": [
          {
            "datasource": "MyStocks-Monitoring",
            "rawSql": "SELECT metric_name as \"操作名称\", classification as \"分类\", database_type as \"数据库\", ROUND(metric_value::NUMERIC, 2) as \"执行时间(ms)\", LEFT(query_sql, 100) as \"SQL\" FROM performance_metrics WHERE is_slow_query = TRUE AND created_at >= NOW() - INTERVAL '7 days' ORDER BY metric_value DESC LIMIT 10",
            "format": "table"
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [{"displayName": "执行时间(ms)", "desc": true}]
        }
      },
      {
        "id": 8,
        "title": "质量检查状态分布",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 20},
        "targets": [
          {
            "datasource": "MyStocks-Monitoring",
            "rawSql": "SELECT check_status, COUNT(*) as count FROM data_quality_checks WHERE created_at >= NOW() - INTERVAL '7 days' GROUP BY check_status",
            "format": "table"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "right"
          },
          "pieType": "pie"
        },
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "PASS"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "green"}}]
            },
            {
              "matcher": {"id": "byName", "options": "WARNING"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "yellow"}}]
            },
            {
              "matcher": {"id": "byName", "options": "FAIL"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}]
            }
          ]
        }
      },
      {
        "id": 9,
        "title": "质量检查趋势",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 16, "x": 8, "y": 20},
        "targets": [
          {
            "datasource": "MyStocks-Monitoring",
            "rawSql": "SELECT DATE_TRUNC('hour', created_at) AS time, check_type, COUNT(CASE WHEN check_status = 'FAIL' THEN 1 END) as \"失败\", COUNT(CASE WHEN check_status = 'WARNING' THEN 1 END) as \"警告\" FROM data_quality_checks WHERE created_at >= NOW() - INTERVAL '7 days' GROUP BY time, check_type ORDER BY time",
            "format": "time_series"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 30,
              "stacking": {"mode": "normal"}
            }
          }
        }
      },
      {
        "id": 10,
        "title": "告警级别分布",
        "type": "bargauge",
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 28},
        "targets": [
          {
            "datasource": "MyStocks-Monitoring",
            "rawSql": "SELECT alert_level, COUNT(*) as count FROM alert_records WHERE created_at >= NOW() - INTERVAL '7 days' GROUP BY alert_level ORDER BY CASE alert_level WHEN 'CRITICAL' THEN 1 WHEN 'WARNING' THEN 2 WHEN 'INFO' THEN 3 END",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "CRITICAL"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}]
            },
            {
              "matcher": {"id": "byName", "options": "WARNING"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "yellow"}}]
            },
            {
              "matcher": {"id": "byName", "options": "INFO"},
              "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "blue"}}]
            }
          ]
        }
      },
      {
        "id": 11,
        "title": "未解决告警列表",
        "type": "table",
        "gridPos": {"h": 6, "w": 16, "x": 8, "y": 28},
        "targets": [
          {
            "datasource": "MyStocks-Monitoring",
            "rawSql": "SELECT alert_level as \"级别\", alert_type as \"类型\", alert_title as \"标题\", occurrence_count as \"发生次数\", created_at as \"创建时间\", EXTRACT(EPOCH FROM (NOW() - created_at))/3600 as \"持续(小时)\" FROM alert_records WHERE alert_status IN ('OPEN', 'ACKNOWLEDGED') ORDER BY CASE alert_level WHEN 'CRITICAL' THEN 1 WHEN 'WARNING' THEN 2 WHEN 'INFO' THEN 3 END, created_at DESC LIMIT 20",
            "format": "table"
          }
        ],
        "options": {
          "showHeader": true
        }
      },
      {
        "id": 12,
        "title": "操作类型分布",
        "type": "piechart",
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 34},
        "targets": [
          {
            "datasource": "MyStocks-Monitoring",
            "rawSql": "SELECT operation_type, COUNT(*) as count FROM operation_logs WHERE created_at >= NOW() - INTERVAL '24 hours' GROUP BY operation_type",
            "format": "table"
          }
        ]
      },
      {
        "id": 13,
        "title": "操作成功率",
        "type": "table",
        "gridPos": {"h": 6, "w": 16, "x": 8, "y": 34},
        "targets": [
          {
            "datasource": "MyStocks-Monitoring",
            "rawSql": "SELECT target_database as \"数据库\", COUNT(*) as \"总操作数\", COUNT(CASE WHEN operation_status = 'SUCCESS' THEN 1 END) as \"成功\", COUNT(CASE WHEN operation_status = 'FAILED' THEN 1 END) as \"失败\", ROUND(COUNT(CASE WHEN operation_status = 'SUCCESS' THEN 1 END)::NUMERIC / COUNT(*)::NUMERIC * 100, 2) as \"成功率(%)\" FROM operation_logs WHERE created_at >= NOW() - INTERVAL '24 hours' GROUP BY target_database ORDER BY COUNT(*) DESC",
            "format": "table"
          }
        ]
      }
    ],
    "templating": {
      "list": [
        {
          "name": "time_range",
          "label": "时间范围",
          "type": "interval",
          "options": [
            {"text": "1小时", "value": "1h"},
            {"text": "6小时", "value": "6h"},
            {"text": "24小时", "value": "24h", "selected": true},
            {"text": "7天", "value": "7d"},
            {"text": "30天", "value": "30d"}
          ]
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "告警事件",
          "datasource": "MyStocks-Monitoring",
          "enable": true,
          "iconColor": "red",
          "rawQuery": "SELECT created_at as time, alert_title as text, alert_level as tags FROM alert_records WHERE $__timeFilter(created_at) AND alert_level = 'CRITICAL'"
        }
      ]
    }
  },
  "overwrite": true
}
