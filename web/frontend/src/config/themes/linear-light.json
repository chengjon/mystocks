{
  "name": "Linear Light",
  "mode": "light",
  "version": "1.0.0",

  "colors": {
    "background": {
      "deep": "#ffffff",
      "base": "#f9fafb",
      "elevated": "#ffffff",
      "surface": "rgba(0,0,0,0.02)",
      "surfaceHover": "rgba(0,0,0,0.04)",
      "input": "#ffffff"
    },
    "foreground": {
      "primary": "#111827",
      "muted": "#6B7280",
      "subtle": "rgba(0,0,0,0.60)",
      "placeholder": "#9CA3AF"
    },
    "accent": {
      "primary": "#5E6AD2",
      "bright": "#4F5BBA",
      "glow": "rgba(94,106,210,0.25)",
      "subtle": "rgba(94,106,210,0.10)"
    },
    "border": {
      "default": "rgba(0,0,0,0.08)",
      "hover": "rgba(0,0,0,0.12)",
      "accent": "rgba(94,106,210,0.30)",
      "input": "rgba(0,0,0,0.10)"
    },
    "gradient": {
      "primary": "linear-gradient(180deg, #ffffff 0%, #f9fafb 100%)",
      "accent": "linear-gradient(to right, #5E6AD2, #818cf8, #5E6AD2)",
      "text": "linear-gradient(to bottom, #111827, #374151, #6B7280)"
    }
  },

  "backgroundLayers": {
    "baseGradient": "linear-gradient(180deg, #ffffff 0%, #f9fafb 100%)",
    "noiseOpacity": 0.008,
    "gridOpacity": 0.015,
    "gridSize": 64,
    "blobs": [
      {
        "position": "top-center",
        "size": "900x1400",
        "blur": 150,
        "color": "rgba(94,106,210,0.08)",
        "animationDuration": 8
      },
      {
        "position": "left",
        "size": "600x800",
        "blur": 120,
        "color": "rgba(168,85,247,0.05)",
        "animationDuration": 10
      },
      {
        "position": "right",
        "size": "500x700",
        "blur": 100,
        "color": "rgba(99,102,241,0.04)",
        "animationDuration": 9
      },
      {
        "position": "bottom",
        "size": "800x600",
        "blur": 120,
        "color": "rgba(94,106,210,0.06)",
        "animationDuration": 8,
        "pulse": true
      }
    ]
  },

  "shadows": {
    "card": "0 0 0 1px rgba(0,0,0,0.06), 0 2px 8px rgba(0,0,0,0.04), 0 12px 24px rgba(0,0,0,0.04)",
    "cardHover": "0 0 0 1px rgba(94,106,210,0.15), 0 8px 16px rgba(94,106,210,0.08), 0 20px 40px rgba(0,0,0,0.06)",
    "button": "0 0 0 1px rgba(94,106,210,0.4), 0 4px 12px rgba(94,106,210,0.2), inset 0 1px 0 0 rgba(255,255,255,0.2)",
    "glow": "0 0 20px rgba(94,106,210,0.2)",
    "innerHighlight": "inset 0 1px 0 0 rgba(255,255,255,0.8)"
  },

  "typography": {
    "fontFamily": {
      "sans": "\"Inter\", \"Geist Sans\", system-ui, -apple-system, sans-serif",
      "mono": "\"JetBrains Mono\", \"Fira Code\", Consolas, monospace"
    },
    "scale": {
      "display": { "size": "4.5rem", "weight": "600", "lineHeight": "1.1", "tracking": "-0.03em" },
      "h1": { "size": "3rem", "weight": "600", "lineHeight": "1.2", "tracking": "-0.02em" },
      "h2": { "size": "2.25rem", "weight": "600", "lineHeight": "1.3", "tracking": "-0.01em" },
      "h3": { "size": "1.5rem", "weight": "600", "lineHeight": "1.4", "tracking": "0" },
      "bodyLarge": { "size": "1.125rem", "weight": "400", "lineHeight": "1.7", "tracking": "0" },
      "body": { "size": "1rem", "weight": "400", "lineHeight": "1.6", "tracking": "0" },
      "small": { "size": "0.875rem", "weight": "400", "lineHeight": "1.5", "tracking": "0" },
      "label": { "size": "0.75rem", "weight": "500", "lineHeight": "1.4", "tracking": "0.1em" }
    }
  },

  "spacing": {
    "xs": "0.25rem",
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "3rem",
    "3xl": "4rem"
  },

  "radius": {
    "sm": "0.375rem",
    "md": "0.5rem",
    "lg": "0.75rem",
    "xl": "1rem",
    "2xl": "1rem",
    "full": "9999px"
  },

  "animation": {
    "duration": {
      "fast": "200ms",
      "normal": "300ms",
      "slow": "600ms",
      "blob": "8000ms"
    },
    "easing": {
      "default": "cubic-bezier(0.16, 1, 0.3, 1)",
      "out": "ease-out",
      "inOut": "ease-in-out"
    },
    "float": {
      "from": { "y": 0, "rotate": 0 },
      "to": { "y": -20, "rotate": 1 }
    }
  },

  "spotlight": {
    "size": 300,
    "opacity": 0.12,
    "blur": 80
  },

  "components": {
    "button": {
      "primary": {
        "background": "#5E6AD2",
        "hover": "#4F5BBA",
        "text": "#ffffff",
        "padding": "0.75rem 1.5rem",
        "radius": "0.5rem"
      },
      "secondary": {
        "background": "rgba(0,0,0,0.03)",
        "hover": "rgba(0,0,0,0.06)",
        "text": "#111827",
        "border": "1px solid rgba(0,0,0,0.08)"
      },
      "ghost": {
        "background": "transparent",
        "hover": "rgba(0,0,0,0.04)",
        "text": "#6B7280"
      }
    },
    "card": {
      "background": "#ffffff",
      "border": "1px solid rgba(0,0,0,0.08)",
      "radius": "1rem",
      "padding": "1.5rem"
    },
    "input": {
      "background": "#ffffff",
      "border": "1px solid rgba(0,0,0,0.10)",
      "radius": "0.5rem",
      "padding": "0.75rem 1rem",
      "focusBorder": "#5E6AD2",
      "focusRing": "0 0 0 3px rgba(94,106,210,0.15)"
    }
  },

  "metadata": {
    "description": "Linear-style light theme with clean minimalist design",
    "author": "MyStocks Design System",
    "created": "2025-12-31"
  }
}
