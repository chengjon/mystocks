{
  "name": "Linear Dark",
  "mode": "dark",
  "version": "1.0.0",

  "colors": {
    "background": {
      "deep": "#020203",
      "base": "#050506",
      "elevated": "#0a0a0c",
      "surface": "rgba(255,255,255,0.05)",
      "surfaceHover": "rgba(255,255,255,0.08)",
      "input": "#0F0F12"
    },
    "foreground": {
      "primary": "#EDEDEF",
      "muted": "#8A8F98",
      "subtle": "rgba(255,255,255,0.60)",
      "placeholder": "#6B7280"
    },
    "accent": {
      "primary": "#5E6AD2",
      "bright": "#6872D9",
      "glow": "rgba(94,106,210,0.3)",
      "subtle": "rgba(94,106,210,0.15)"
    },
    "border": {
      "default": "rgba(255,255,255,0.06)",
      "hover": "rgba(255,255,255,0.10)",
      "accent": "rgba(94,106,210,0.30)",
      "input": "rgba(255,255,255,0.10)"
    },
    "gradient": {
      "primary": "radial-gradient(ellipse at top, #0a0a0f 0%, #050506 50%, #020203 100%)",
      "accent": "linear-gradient(to right, #5E6AD2, #818cf8, #5E6AD2)",
      "text": "linear-gradient(to bottom, #ffffff, #ffffff5c, #ffffff70)"
    }
  },

  "backgroundLayers": {
    "baseGradient": "radial-gradient(ellipse at top, #0a0a0f 0%, #050506 50%, #020203 100%)",
    "noiseOpacity": 0.015,
    "gridOpacity": 0.02,
    "gridSize": 64,
    "blobs": [
      {
        "position": "top-center",
        "size": "900x1400",
        "blur": 150,
        "color": "rgba(94,106,210,0.25)",
        "animationDuration": 8
      },
      {
        "position": "left",
        "size": "600x800",
        "blur": 120,
        "color": "rgba(168,85,247,0.15)",
        "animationDuration": 10
      },
      {
        "position": "right",
        "size": "500x700",
        "blur": 100,
        "color": "rgba(99,102,241,0.12)",
        "animationDuration": 9
      },
      {
        "position": "bottom",
        "size": "800x600",
        "blur": 120,
        "color": "rgba(94,106,210,0.10)",
        "animationDuration": 8,
        "pulse": true
      }
    ]
  },

  "shadows": {
    "card": "0 0 0 1px rgba(255,255,255,0.06), 0 2px 20px rgba(0,0,0,0.4), 0 0 40px rgba(0,0,0,0.2)",
    "cardHover": "0 0 0 1px rgba(255,255,255,0.10), 0 8px 40px rgba(0,0,0,0.5), 0 0 80px rgba(94,106,210,0.1)",
    "button": "0 0 0 1px rgba(94,106,210,0.5), 0 4px 12px rgba(94,106,210,0.3), inset 0 1px 0 0 rgba(255,255,255,0.2)",
    "glow": "0 0 20px rgba(94,106,210,0.3)",
    "innerHighlight": "inset 0 1px 0 0 rgba(255,255,255,0.1)"
  },

  "typography": {
    "fontFamily": {
      "sans": "\"Inter\", \"Geist Sans\", system-ui, -apple-system, sans-serif",
      "mono": "\"JetBrains Mono\", \"Fira Code\", Consolas, monospace"
    },
    "scale": {
      "display": { "size": "4.5rem", "weight": "600", "lineHeight": "1.1", "tracking": "-0.03em" },
      "h1": { "size": "3rem", "weight": "600", "lineHeight": "1.2", "tracking": "-0.02em" },
      "h2": { "size": "2.25rem", "weight": "600", "lineHeight": "1.3", "tracking": "-0.01em" },
      "h3": { "size": "1.5rem", "weight": "600", "lineHeight": "1.4", "tracking": "0" },
      "bodyLarge": { "size": "1.125rem", "weight": "400", "lineHeight": "1.7", "tracking": "0" },
      "body": { "size": "1rem", "weight": "400", "lineHeight": "1.6", "tracking": "0" },
      "small": { "size": "0.875rem", "weight": "400", "lineHeight": "1.5", "tracking": "0" },
      "label": { "size": "0.75rem", "weight": "500", "lineHeight": "1.4", "tracking": "0.1em" }
    }
  },

  "spacing": {
    "xs": "0.25rem",
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "3rem",
    "3xl": "4rem"
  },

  "radius": {
    "sm": "0.375rem",
    "md": "0.5rem",
    "lg": "0.75rem",
    "xl": "1rem",
    "2xl": "1rem",
    "full": "9999px"
  },

  "animation": {
    "duration": {
      "fast": "200ms",
      "normal": "300ms",
      "slow": "600ms",
      "blob": "8000ms"
    },
    "easing": {
      "default": "cubic-bezier(0.16, 1, 0.3, 1)",
      "out": "ease-out",
      "inOut": "ease-in-out"
    },
    "float": {
      "from": { "y": 0, "rotate": 0 },
      "to": { "y": -20, "rotate": 1 }
    }
  },

  "spotlight": {
    "size": 300,
    "opacity": 0.15,
    "blur": 80
  },

  "components": {
    "button": {
      "primary": {
        "background": "#5E6AD2",
        "hover": "#6872D9",
        "text": "#ffffff",
        "padding": "0.75rem 1.5rem",
        "radius": "0.5rem"
      },
      "secondary": {
        "background": "rgba(255,255,255,0.05)",
        "hover": "rgba(255,255,255,0.08)",
        "text": "#EDEDEF",
        "border": "none"
      },
      "ghost": {
        "background": "transparent",
        "hover": "rgba(255,255,255,0.05)",
        "text": "#8A8F98"
      }
    },
    "card": {
      "background": "linear-gradient(to bottom, rgba(255,255,255,0.08), rgba(255,255,255,0.02))",
      "border": "1px solid rgba(255,255,255,0.06)",
      "radius": "1rem",
      "padding": "1.5rem"
    },
    "input": {
      "background": "#0F0F12",
      "border": "1px solid rgba(255,255,255,0.10)",
      "radius": "0.5rem",
      "padding": "0.75rem 1rem",
      "focusBorder": "#5E6AD2",
      "focusRing": "0 0 0 3px rgba(94,106,210,0.2)"
    }
  },

  "metadata": {
    "description": "Linear-style dark theme with multi-layer ambient lighting and precision interactions",
    "author": "MyStocks Design System",
    "created": "2025-12-31"
  }
}
