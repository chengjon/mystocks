{
  "name": "mystocks-e2e-tests",
  "version": "1.0.0",
  "description": "MyStocks E2E测试框架 - Playwright + TypeScript",
  "scripts": {
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:auth": "playwright test auth.spec.ts",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install --with-deps"
  },
  "keywords": [
    "e2e",
    "testing",
    "playwright",
    "typescript"
  ],
  "author": "Test CLI",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0"
  }
}
